<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="jedisPoolConfig" class="cc.linkedme.commons.redis.RedisConfig"
          abstract="true">
        <property name="minPoolSize" value="6"/>
        <property name="maxPoolSize" value="30"/>
        <property name="whenExhaustedAction" value="1"/>
        <property name="maxWait" value="500"/>
        <property name="lifo" value="false"/>

        <property name="testOnBorrow" value="false"/>
        <property name="testOnReturn" value="false"/>
        <property name="testWhileIdle" value="true"/>
        <property name="numTestsPerEvictionRun" value="-2"/>
        <property name="timeBetweenEvictionRunsMillis" value="30000"/>
        <property name="softMinEvictableIdleTimeMillis" value="3600000"/>
        <property name="minEvictableIdleTimeMillis" value="-1"/>
    </bean>

    <!-- ******************** deeplink start ************************************ -->
    <bean id="deepLinkShardingSupport" class="cc.linkedme.commons.shard.ShardingSupportHash">
        <property name="clients" ref="deepLinkJedisClientMap"/>
        <property name="hashAlg" value="crc32"/>
        <property name="hashGene" value="256"/>
        <property name="tablePerDb" value="64"/>
    </bean>

    <bean id="deepLinkJedisClientMap" class="java.util.HashMap">
        <constructor-arg>
            <map>
                <entry key="0" value-ref="deepLinkJedisClient_0"/>
                <entry key="1" value-ref="deepLinkJedisClient_1"/>
                <entry key="2" value-ref="deepLinkJedisClient_2"/>
                <entry key="3" value-ref="deepLinkJedisClient_3"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="deepLinkJedisClient_0" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:22222"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:33333"></property>
            </bean>
        </property>
    </bean>
    <bean id="deepLinkJedisClient_1" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:22222"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:33333"></property>
            </bean>
        </property>
    </bean>
    <bean id="deepLinkJedisClient_2" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:22222"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:33333"></property>
            </bean>
        </property>
    </bean>
    <bean id="deepLinkJedisClient_3" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:22222"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:33333"></property>
            </bean>
        </property>
    </bean>
    <!-- ******************** deeplink end ************************************ -->

    <!-- ******************** client start ************************************ -->
    <bean id="clientShardingSupport" class="cc.linkedme.commons.shard.ShardingSupportHash">
        <property name="clients" ref="deviceJedisClientMap"/>
        <property name="hashAlg" value="crc32"/>
        <property name="hashGene" value="256"/>
        <property name="tablePerDb" value="64"/>
    </bean>

    <bean id="deviceJedisClientMap" class="java.util.HashMap">
        <constructor-arg>
            <map>
                <entry key="0" value-ref="deviceJedisClient_0"/>
                <entry key="1" value-ref="deviceJedisClient_1"/>
                <entry key="2" value-ref="deviceJedisClient_2"/>
                <entry key="3" value-ref="deviceJedisClient_3"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="deviceJedisClient_0" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:22222"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:33333"></property>
            </bean>
        </property>
    </bean>
    <bean id="deviceJedisClient_1" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:22222"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:33333"></property>
            </bean>
        </property>
    </bean>
    <bean id="deviceJedisClient_2" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:22222"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:33333"></property>
            </bean>
        </property>
    </bean>
    <bean id="deviceJedisClient_3" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:22222"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="192.168.21.242:33333"></property>
            </bean>
        </property>
    </bean>
    <!-- ******************** client end ************************************ -->

</beans>
