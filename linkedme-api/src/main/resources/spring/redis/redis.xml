<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- ******************** deeplink start ************************************ -->
    <bean id="deepLinkShardingSupport" class="cc.linkedme.commons.shard.ShardingSupportHash">
        <property name="clients" ref="deepLinkJedisClientMap"/>
        <property name="hashAlg" value="crc32"/>
        <property name="hashGene" value="256"/>
        <property name="tablePerDb" value="64"/>
    </bean>

    <bean id="deepLinkJedisClientMap" class="java.util.HashMap">
        <constructor-arg>
            <map>
                <entry key="0" value-ref="deepLinkJedisClient_0"/>
                <entry key="1" value-ref="deepLinkJedisClient_1"/>
                <entry key="2" value-ref="deepLinkJedisClient_2"/>
                <entry key="3" value-ref="deepLinkJedisClient_3"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="deepLinkJedisClient_0" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.id.master_0}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.id.slave_0}"></property>
            </bean>
        </property>
    </bean>
    <bean id="deepLinkJedisClient_1" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.id.master_1}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.id.slave_1}"></property>
            </bean>
        </property>
    </bean>
    <bean id="deepLinkJedisClient_2" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.id.master_2}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.id.slave_2}"></property>
            </bean>
        </property>
    </bean>
    <bean id="deepLinkJedisClient_3" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.id.master_3}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.id.slave_3}"></property>
            </bean>
        </property>
    </bean>
    <!-- ******************** deeplink end ************************************ -->

    <!-- ************** count dao start ******************* -->
    <bean id="deepLinkCountDao" class="cc.linkedme.commons.counter.dao.impl.CountDaoImpl">
        <property name="shardingSupport">
            <bean class="cc.linkedme.commons.shard.ShardingSupportHash">
                <property name="clients" ref="countClientsMap" />
                <property name="hashAlg" value="crc32" />
                <property name="hashGene" value="256" />
                <property name="tablePerDb" value="64" />
            </bean>
        </property>
    </bean>

    <bean id="countClientsMap" class="java.util.HashMap">
        <constructor-arg>
            <map>
                <entry key="0" value-ref="countJedisClient_0"/>
                <entry key="1" value-ref="countJedisClient_1"/>
                <entry key="2" value-ref="countJedisClient_2"/>
                <entry key="3" value-ref="countJedisClient_3"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="countJedisClient_0" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.count.master_0}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.count.slave_0}"></property>
            </bean>
        </property>
    </bean>
    <bean id="countJedisClient_1" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.count.master_1}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.count.slave_1}"></property>
            </bean>
        </property>
    </bean>
    <bean id="countJedisClient_2" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.count.master_2}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.count.slave_2}"></property>
            </bean>
        </property>
    </bean>
    <bean id="countJedisClient_3" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.count.master_3}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${deeplink.count.slave_3}"></property>
            </bean>
        </property>
    </bean>

    <!-- ************** count dao end **********************-->

    <!-- ******************** client start ************************************ -->
    <bean id="clientShardingSupport" class="cc.linkedme.commons.shard.ShardingSupportHash">
        <property name="clients" ref="deviceJedisClientMap"/>
        <property name="hashAlg" value="crc32"/>
        <property name="hashGene" value="256"/>
        <property name="tablePerDb" value="64"/>
    </bean>

    <bean id="deviceJedisClientMap" class="java.util.HashMap">
        <constructor-arg>
            <map>
                <entry key="0" value-ref="deviceJedisClient_0"/>
                <entry key="1" value-ref="deviceJedisClient_1"/>
                <entry key="2" value-ref="deviceJedisClient_2"/>
                <entry key="3" value-ref="deviceJedisClient_3"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="deviceJedisClient_0" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${device.identityid.master_0}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${device.identityid.slave_0}"></property>
            </bean>
        </property>
    </bean>
    <bean id="deviceJedisClient_1" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${device.identityid.master_1}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${device.identityid.slave_1}"></property>
            </bean>
        </property>
    </bean>
    <bean id="deviceJedisClient_2" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${device.identityid.master_2}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${device.identityid.slave_2}"></property>
            </bean>
        </property>
    </bean>
    <bean id="deviceJedisClient_3" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${device.identityid.master_3}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${device.identityid.slave_3}"></property>
            </bean>
        </property>
    </bean>
    <!-- ******************** client end ************************************ -->

    <!-- ******************** btn count start ************************************ -->
    <bean id="btnCountShardingSupport" class="cc.linkedme.commons.shard.ShardingSupportHash">
        <property name="clients" ref="btnCountJedisClientMap"/>
        <property name="hashAlg" value="crc32"/>
        <property name="hashGene" value="256"/>
        <property name="tablePerDb" value="128"/>
    </bean>

    <bean id="btnCountJedisClientMap" class="java.util.HashMap">
        <constructor-arg>
            <map>
                <entry key="0" value-ref="btnCountJedisClient_0"/>
                <entry key="1" value-ref="btnCountJedisClient_1"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="btnCountJedisClient_0" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${btn.count.master_0}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${btn.count.slave_0}"></property>
            </bean>
        </property>
    </bean>
    <bean id="btnCountJedisClient_1" class="cc.linkedme.commons.redis.JedisMSServer"
          init-method="init">
        <property name="masterConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${btn.count.master_1}"></property>
            </bean>
        </property>
        <property name="slaveConfig">
            <bean parent="jedisPoolConfig">
                <property name="serverPortDb" value="${btn.count.slave_1}"></property>
            </bean>
        </property>
    </bean>
    <!-- ******************** btn count end ************************************ -->

</beans>
