<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="cc.linkedme.commons.auth"/>

    <bean id="uuidCreator" class="cc.linkedme.commons.uuid.UuidCreator">
        <property name="uuidGenerator">
            <bean id="uuidGenerator" lazy-init="true" class="cc.linkedme.commons.memcache.VikaCacheClient" init-method="init">
                <property name="minSpareConnections" value= "2" />
                <property name="maxSpareConnections" value= "15" />
                <property name="failover" value= "true" />
                <property name="primitiveAsString" value= "true" />
                <property name="serverPort" value= "117.114.130.212:6000" />
            </bean>
        </property>
    </bean>

    <bean id="authFilter" class="cc.linkedme.commons.auth.AuthFilter" />

    <bean id="console" class="cc.linkedme.commons.switcher.console.ConsoleServer" init-method="startup" destroy-method="shutdown">
        <constructor-arg>
            <value>8881</value> <!-- server port -->
        </constructor-arg>
        <constructor-arg>
            <value>1024</value> <!-- server read buffer size -->
        </constructor-arg>
    </bean>

</beans>
